<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a game Mode"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/chooseModeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="REACTION TIMER"
        android:textSize="30dp"
        android:id="@+id/button_timer"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/chooseModeTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_buzzer"
        android:layout_alignEnd="@+id/button_buzzer"
        android:onClick="startReactionTimer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Gameshow Buzzer"
        android:textSize="30dp"
        android:id="@+id/button_buzzer"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startGameshowBuzzer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="STATS"
        android:textSize="30dp"
        android:id="@+id/button_stats"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startStatsBoard" />

</RelativeLayout>
