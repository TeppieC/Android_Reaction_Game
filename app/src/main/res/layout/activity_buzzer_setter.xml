<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zhaorui.zhaorui_reflex.UI.BuzzerSetterActivity">


    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="2 Player"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:onClick="start2pBuzzer" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="3 Player"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="start3pBuzzer" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="4 Player"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:onClick="start4pBuzzer" />
</RelativeLayout>
